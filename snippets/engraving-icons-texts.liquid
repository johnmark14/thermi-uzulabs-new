<!-- Menus for Text -->
{%style%}
    .engraving-personalization > fieldset.engraving-icons-texts {
        padding: 0;
    }
    .engraving-personalization > fieldset.engraving-icons-texts:last-child {
        padding-bottom: 20px;
    }
    .engraving-personalization > fieldset.engraving-icons-texts.icons {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
    }
    .engraving-personalization > fieldset.engraving-icons-texts.texts{
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }
    .engraving-personalization > fieldset label.span-two-col {
        grid-column: 1/ span 2;
    }
    .engraving-personalization fieldset.engraving-icons-texts > label {
        padding: 10px;
        display: flex;
        justify-content: center;
    }
    .engraving-personalization fieldset.engraving-icons-texts.texts > label {
        padding: 20px 10px;
    }

    .engraving-personalization .ProductSelect-option svg {
        height: 42px;
    }
    
    .engraving-personalization .ProductSelect-option path {
        fill: rgba(0,0,0,0.5);
    }

    .single-option-radio input[type=radio]:checked+label .ProductSelect-option path {
        fill: rgba(0,0,0,1);
    }
{%endstyle%}
